{
    "version": "0.2.0",
    "configurations": [
        {
          "name": "Api",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/src/bin/Debug/net7.0/Demo.Api.dll",
          "args": [],
          "cwd": "${workspaceFolder}/src",
          "stopAtEntry": false,
          "serverReadyAction": {
              "action": "openExternally",
              "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
              "uriFormat": "%s/swagger/index.html"
          }
        }
    ]
}